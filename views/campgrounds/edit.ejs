<% layout('layouts/boilerplate') %>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 fw-bold mb-1">Edit Campground</h1>
                        <p class="text-muted mb-0">Update details, manage images, and save changes.</p>
                    </div>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-secondary">
                        Back
                    </a>
                </div>

                <div class="card shadow-lg border-0">
                    <div class="card-body p-4 p-md-5">

                        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"
                            class="validated-form" novalidate enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label" for="name">Name</label>
                                <input class="form-control form-control-lg" type="text" id="name"
                                    name="campground[name]" value="<%= campground.name %>" required>
                                <div class="invalid-feedback">Please enter a name.</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="location">Location</label>
                                <input class="form-control form-control-lg" type="text" id="location"
                                    name="campground[location]" value="<%= campground.location %>" required>
                                <div class="invalid-feedback">Please enter a location.</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="price">Price per night</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" id="price" name="campground[price]"
                                        value="<%= campground.price %>" min="0" step="1" required>
                                    <div class="invalid-feedback">Please enter a valid price.</div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="description">Description</label>
                                <textarea class="form-control" id="description" name="campground[description]" rows="5"
                                    required><%= campground.description %></textarea>
                                <div class="invalid-feedback">Please enter a description.</div>
                            </div>

                            <hr class="my-4">

                            <div class="mb-4">
                                <label for="image" class="form-label fw-semibold">Upload new images</label>
                                <input class="form-control" type="file" id="image" name="campground[images]" multiple>
                                <div class="form-text">You can select multiple images.</div>
                            </div>

                            <div class="mb-4">
                                <h2 class="h6 fw-bold mb-3">Existing images</h2>

                                <% if (!campground.images || campground.images.length===0) { %>
                                    <div class="alert alert-info mb-0">No images uploaded yet.</div>
                                    <% } else { %>
                                        <div class="row g-3">
                                            <% campground.images.forEach(function(img, i) { %>
                                                <div class="col-6 col-md-4">
                                                    <div class="card h-100 border-0 shadow-sm">
                                                        <img src="<%= img.thumbnail || img.url %>" class="card-img-top"
                                                            alt="campground image"
                                                            style="height: 140px; object-fit: cover;">
                                                        <div class="card-body p-3">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="image-<%= i %>" name="deleteImages[]"
                                                                    value="<%= img.filename %>">
                                                                <label class="form-check-label" for="image-<%= i %>">
                                                                    Delete this image
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
                            </div>

                            <div class="d-flex gap-2">
                                <button class="btn btn-primary btn-lg flex-grow-1">Save Changes</button>
                                <a class="btn btn-outline-danger btn-lg"
                                    href="/campgrounds/<%= campground._id %>">Cancel</a>
                            </div>

                        </form>

                    </div>
                </div>

                <div class="text-center mt-3">
                    <a class="text-decoration-none" href="/campgrounds/<%= campground._id %>">
                        ‚Üê Back to campground
                    </a>
                </div>

            </div>
        </div>
    </div>